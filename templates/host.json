{
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "eu-west-1",
      "source_ami": "ami-896c96fe",
      "instance_type": "c3.large",
      "ssh_username": "ubuntu",
      "security_group_id": "sg-64e47013",
      "ami_name": "docker_host_{{timestamp}}"
    }
  ],

  "provisioners": [
    {
      "type": "file",
      "source": "./config/ssh.d",
      "destination": "/home/ubuntu/assets"
    },
    {
      "type": "file",
      "source": "./scripts/docker.sh",
      "destination": "/home/ubuntu/docker.sh"
    },
    {
      "type": "shell",
      "inline": "sudo cp -r assets/ docker.sh /opt/",
      "inline_shebang": "/bin/bash"
    },
    {
      "type": "shell",
      "inline": "sudo bash /opt/docker.sh",
      "inline_shebang": "/bin/bash"
    }
  ]
}
