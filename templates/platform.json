{
  "builders": [
    {
      "type": "docker",
      "image": "phusion/baseimage",
      "commit": true
    }
  ],

  "provisioners": [
    {
      "type": "file",
      "source": "./",
      "destination": "/opt/assets"
    },
    {
      "type": "shell",
      "inline": "/opt/assets/platforms/init.sh {{user `platform`}}",
      "inline_shebang": "/bin/bash"
    },
    {
      "type": "shell",
      "inline": "rm -rf /opt/assets",
      "inline_shebang": "/bin/bash"
    }
  ],

  "post-processors": [
    {
      "type": "docker-tag",
      "repository": "wake-platforms/{{user `platform`}}",
      "tag": "latest",
      "force": true
    }
  ]
}
